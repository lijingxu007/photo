/* pages/detail/detail.wxss */
.cropper-wrapper {
  position: relative;
}
page {
  background: #000;
  height: 100%;
   overflow: hidden; 
}

.cropper-buttons {
  color: #fff;
}
.header {
  color: #fff;
  padding-top: 66rpx;
  padding-bottom: 120rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
}

.tips {
  font-size: 22rpx;
  color: #575757;
}

.firstLetter {
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid #f83a3a;
}

.detail {
  height: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.below {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
   /* border: 1px solid red;  */
  padding:0 35rpx;
  padding-bottom: 20rpx;
}

.copyright, .change-text {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  text-align: center;
  color: #575757;
}

.save {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 0.2s;
}

.save-btn {
  width: 150rpx;
  height: 150rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: #fff;
  background: #f83a3a;
  letter-spacing:6rpx;
  transition: 0.2s;
}

.change-text {
  color: #fff;
  text-align: right;
}

.bottom-mask {
  height: 150rpx;
  position: absolute;
  width: 100%;
  left: 0;
  top: 160rpx;
  z-index: 99;
  background: #000;
  /* border: 1px solid red; */
}
canvas {
  z-index: 1;
}

.off-canvas {
   position: absolute; 
   z-index: -1;
   top: 150rpx; 
  width: 750rpx;
  height: 420rpx;
  background: #000;
}

.refresh {
  width: 32rpx;
  height: 32rpx;
  margin-left: 6rpx;
  /* height:62rpx; */
  vertical-align: middle;
  transition: 0.2s;
}

.change-tips {
  display: inline-block;
}

canvas {
  width: 100%;
  height: 100%;
}

.cropper {
  z-index: 999 !important;
}

.arrows {
  /* position: absolute;
  z-index: 999999!important; */
  position: absolute;
  width: 100%;
  left: 0;
  top: 180rpx;
  height: 200rpx;
  border: 1px solid blue;
  z-index: 999999!important;
}

.sos {
  position: absolute;
  z-index: 99999999;
  top: 60rpx;
  width: 50rpx;
  height: 200rpx;
  right: 35rpx;
  display: flex;
   align-items:flex-end; 
   justify-content: center; 
  flex-direction: column;
  /* padding-right: 65rpx; */
}

.arrow {
   width: 30rpx; 
   height: 60rpx;
   /* margin-right: 40rpx; */
}
.finger {
  width: 50rpx; 
  /* margin-right: 20rpx; */
}
.sos {
  text-align: right;
}

.line {
  height: 4rpx;
  background: red;
}

.refresh-animation .refresh{
  transform: rotate(360deg)
}

.hover {
  transform: scale(0.9);
}